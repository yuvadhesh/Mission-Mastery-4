#include<iostream>
#include<vector>
using namespace std;
int main() 
{
    int n;
    cin>>n;
    vector<vector<int>>matrix(n,vector<int>(n));
    for(int i=0;i<n;++i)
        for(int j=0;j<n;++j)
            cin>>matrix[i][j];
    int sum=0;
    for(int k=0;k<=2*(n-1);++k){
        if(k%2==0){
            for(int i=0;i<n;++i){
                int j=k-i;
                if(j>=0&&j<n)
                    sum+=matrix[i][j];
            }
        } 
        else 
        {
            for(int j=0;j<n;++j){
                int i=k-j;
                if(i>=0&&i<n)
                    sum+=matrix[i][j];
            }
        }
    }
    cout<<sum<<endl;
    return 0;
}
